	const nombre
	const traje = null
	
	method quienSoy() = nombre
	method tengoTraje() = traje != null
}
object superman inherits Heroe(nombre = "Clark Kent", traje = "rojo y azul") {
	
}
// XPECT errors --> "Reference apellido not found in class Heroe" at "apellido = \"Wilson\""
